{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "Image",
            "horizontalAlignment": "Center",
            "url": "https://github.com/SohaJoshi/Project/blob/main/3%20Wise%20Monkeys%20Logo.png",
            "spacing": "None",
            "backgroundColor": "light",
            "size": "Large"
        },
        {
            "type": "TextBlock",
            "size": "Large",
            "horizontalAlignment": "Center",
            "weight": "Bolder",
            "color": "Dark",
            "text": "Welcome to 3 Wise Monkeys!",
            "maxLines": 0,
            "spacing": "None"
        },
        {
            "type": "TextBlock",
            "isSubtle": true,
            "horizontalAlignment": "Center",
            "text": "You can click on the button or write normally.",
            "wrap": true,
            "maxLines": 0,
            "spacing": "None",
            "weight": "Bolder",
            "color": "Accent"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Menù",
            "iconUrl": "http://icons.iconarchive.com/icons/icons8/ios7/64/Food-Pizza-icon.png",
            "data": "menù"
        },
        {
            "type": "Action.Submit",
            "title": "Location",
            "iconUrl": "http://icons.iconarchive.com/icons/icons8/ios7/64/Maps-Location-icon.png",
            "data": "location"
        },
        {
            "type": "Action.Submit",
            "title": "Reserve a table",
            "iconUrl": "http://icons.iconarchive.com/icons/praveen/minimal-outline/64/calendar-icon.png",
            "data": "I want reserve a table"
        },
        {
            "type": "Action.Submit",
            "title": "Order delivery",
            "iconUrl": "http://icons.iconarchive.com/icons/icons8/ios7/64/Ecommerce-Delivery-icon.png",
            "data": "Order"
        }
    ],
    "backgroundImage": {
        "url": "https://i.ibb.co/X3KZ2Sn/background-Adaptive.png",
        "fillMode": "Repeat"
    }
}